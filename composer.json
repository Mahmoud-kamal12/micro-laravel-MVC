{
  "name": "mirco/php-mvc",
  "description": "A micro clone implementation of  laravel MVC",
  "authors": [
    {
      "name": "Mahmoud Kamal"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "App",
      "Lib\\": "src"
    },
    "classmap": [
      "src/Database/DB.php"
    ],
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "symfony/var-dumper": "^5.2",
    "vlucas/phpdotenv": "^5.3",
    "illuminate/database": "^8.83"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "migrate": [
      "Lib\\Database\\DB::migrate"
    ],
    "start": [
      "php8 -S localhost:8000 -t .\\public\\"
    ]
  },
  "config": {
    "process-timeout": 0
  }
}
